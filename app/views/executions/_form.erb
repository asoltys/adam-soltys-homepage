<% content_for :head do %>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.2.6/jquery.min.js" type="text/javascript"></script>
  <script src="http://jqueryjs.googlecode.com/svn/trunk/plugins/datePicker/v2/demo/date.js" type="text/javascript"></script>
  <script src="http://jquery-datepicker.googlecode.com/files/jquery.datePicker.min-2.1.1.js" type="text/javascript"></script>
  <%= javascript_include_tag "executions" %>
<% end %>

<label for="date">Date</label>
<%= f.text_field :date %>
<br />

<label for="date">Account</label>
<%= collection_select :execution, :account_id, Account.find(:all), :id, :name %>
<br />

<label for="type">Type</label>
<%= select :execution, :execution_type, ['Buy','Sell'] %>
<br />

<label for="stock">Stock</label>
<%= collection_select :execution, :stock_id, Stock.find(:all), :id, :company %>
<br />

<label for="shares">Shares</label>
<%= f.text_field :shares %>
<br />

<label for="price">Price</label>
<%= f.text_field :price %>
<br />

<label for="commission">Commission</label>
<%= f.text_field :commission %>
